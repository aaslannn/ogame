{
  "name": "OGame UX Extension",
  "version": "1.0",
  "description": "Better visualisez important points of Ogame UI!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "ogame.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ogame.gameforge.com/*"
      ],
      "css": [
        "ogame.css"
      ],
      "js": [
        "ogame-common.js",
        "ogame-galaxy.js",
        "ogame-messages.js",
        "ogame-fleet.js"
      ]
    }
  ],
  "manifest_version": 2
}
